<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/white"> <!-- Customize the ripple color if needed -->
    <item android:id="@android:id/mask">
        <shape
            android:shape="rectangle">
            <corners android:radius="15dp"/>
            <solid android:color="@android:color/holo_blue_light" /> <!-- Background when pressed -->
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle"
            >
            <corners android:radius="15dp"/>
            <solid android:color="@color/black" /> <!-- Default background color -->
        </shape>
    </item>
</ripple>
